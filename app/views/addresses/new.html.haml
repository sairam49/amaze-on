.container
  %h3.text-center Add Address
  = form_for(:address, url: address_create_path ) do |f|
    .form-group
      = hidden_field_tag 'address[user_id]', current_user.id
    .form-group
      = f.label :house_number
      = f.text_field :house_number,autofocus: true,class: 'form-control'
    .form-group
      = f.label :street
      = f.text_area :street,autofocus: true,class: 'form-control'
    .form-group
      = f.label :city
      = f.text_field :city,autofocus: true,class: 'form-control'
    .form-group
      = f.label :state
      = f.text_field :state,autofocus: true,class: 'form-control'
    .form-group
      = f.label :pincode
      = f.text_field :pincode,autofocus: true,class: 'form-control'
    .form-group
      = f.label :phone_number
      = f.text_field :phone_number,autofocus: true,class: 'form-control'
    = f.submit "Add Address" ,class: 'btn btn-primary center'

